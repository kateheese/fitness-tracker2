if user
  nav.navbar.navbar-inverse
    .container-fluid
      .navbar-header
        button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#bs-example-navbar-collapse-2')
          span.sr-only Toggle navigation
          span.icon-bar
          span.icon-bar
          span.icon-bar
        a.navbar-brand(href='/fitness/' + user._id) 
          img.logo-image(src='/images/icon.png')
        div.logo-head
          h1 FITNESS TRACKER
      #bs-example-navbar-collapse-2.collapse.navbar-collapse
        ul.nav.navbar-nav.navbar-right
          li
            a(href='/fitness/' + user._id) #{oauthUser.displayName}
          li
            img(src=oauthUser.photos[0].value||'/images/profile.png')
          li
            a(href='/signout') Sign Out
else
  nav.navbar.navbar-inverse
    .container-fluid
      .navbar-header
        button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#bs-example-navbar-collapse-2')
