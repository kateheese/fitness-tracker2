          span.icon-bar
          span.icon-bar
          span.icon-bar
        a.navbar-brand(href='/') 
          img.logo-image(src='/images/icon.png')
        h1.logo-head FITNESS TRACKER
      #bs-example-navbar-collapse-2.collapse.navbar-collapse
        ul.nav.navbar-nav.navbar-right
          li
            a(href='/about') About
          li
            a(href='/signin') Sign In
