extends ../layout

block content
  include ../header
  div.row
    div.div.col-md-4.col-md-offset-4
      include ../errors
  div.row
    div.div.well.col-md-4.col-md-offset-4
      h4 Edit your stats:
      if error
        div.errors.alert.alert-danger(role="alert")
          p.text-danger= error
      form(action='/fitness/' + user._id + '/update' method='POST')
        div.form-group
          label(for='age') Age
          input.form-control(type='number' name='age' id='age' value=user.age)
        div.form-group
          label(for='sex') Sex
          select.form-control(name='sex' id='sex')
            option(value='' disabled selected) Select
            option(value='male' selected=(user.sex== 'male' ? "selected" : undefined)) Male
            option(value='female' selected=(user.sex== 'female' ? "selected" : undefined)) Female
        div.form-group
          label(for='height') Height
          div.input-group(aria-describedby="basic-addon2")
            input.form-control(type='number' name='feet' id='height' value=user.feet)
            span.input-group-addon#basic-addon2 ft
          div.input-group(aria-describedby="basic-addon2")
            input.form-control(type='number' name='inches' value=user.inches)
            span.input-group-addon#basic-addon2 in
        div.form-group
          label(for='weight') Weight
          div.input-group(aria-describedby="basic-addon2")
            input.form-control(type='number' name='weight' id='weight' value=user.weight)
            span.input-group-addon#basic-addon2 lbs
        div.form-group
          label(for='activity') Average Level of Activity
          select.form-control(id='activity' name='activity')
            option(value='' disabled selected) Select
            option(value='1.2' selected=(user.activity== '1.2' ? "selected" : undefined)) Sedentary
            option(value='1.375' selected=(user.activity== '1.375' ? "selected" : undefined)) Lightly Active
            option(value='1.55' selected=(user.activity== '1.55' ? "selected" : undefined)) Moderately Active
            option(value='1.725' selected=(user.activity== '1.725' ? "selected" : undefined)) Very Active
            option(value='1.9' selected=(user.activity== '1.9' ? "selected" : undefined)) Extra Active
        div.form-group
          label(for='goal') Weight Goal
          select.form-control(id='goal' name='goal')
            option(value='' disabled selected) Select
            option(value='lose' selected=(user.goal== 'lose' ? "selected" : undefined)) Lose Weight
            option(value='maintain' selected=(user.goal== 'maintain' ? "selected" : undefined)) Maintain Weight
            option(value='gain' selected=(user.goal== 'gain' ? "selected" : undefined)) Gain Weight
        div.form-group
          input.btn.btn-primary(type='submit', value='Edit')